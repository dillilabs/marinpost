{% spaceless %}
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <channel>
        <title>{{ siteName }}</title>
        <link>{{ siteUrl }}</link>
        <atom:link href="{{ craft.request.url }}" rel="self" type="application/rss+xml" />
        <description>The Marin Post</description>
        <language>en-us</language>
        <pubDate>{{ now.rss }}</pubDate>
        <lastBuildDate>{{ now.rss }}</lastBuildDate>
        {% for entry in craft.entries.section(['blog', 'media', 'news', 'notices']) %}
            <item>
                <title>{{ entry.title }}</title>
                <pubDate>{{ entry.postDate.rss }}</pubDate>
                <dc:creator>{{ entry.author.name }}</dc:creator>
                {% switch entry.section.handle %}
                    {% case 'blog' %}
                        <link>{{ entry.url }}</link>
                        <guid>{{ entry.url }}</guid>
                        <description><![CDATA[{{ entry.blogContent }}]]></description>
                    {% case 'media' %}
                        <link>{{ siteUrl }}media</link>
                        <guid isPermaLink="false">media-{{ entry.id }}</guid>
                        <description><![CDATA[{{ entry.linkComments }}]]></description>
                    {% case 'news' %}
                        <link>{{ siteUrl }}news</link>
                        <guid isPermaLink="false">news-{{ entry.id }}</guid>
                        <description><![CDATA[{{ entry.linkComments }}]]></description>
                    {% case 'notices' %}
                        <link>{{ entry.url }}</link>
                        <guid>{{ entry.url }}</guid>
                        <description><![CDATA[{{ entry.noticeContent }}]]></description>
                {% endswitch %}
            </item>
        {% endfor %}
    </channel>
</rss>
{% endspaceless %}
